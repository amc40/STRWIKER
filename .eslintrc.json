{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/strict-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked"
  ],
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "rules": {
    // should use tailwind css
    "react/forbid-dom-props": ["error", { "forbid": ["style"] }]
  }
}
